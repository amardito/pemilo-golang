# Server Configuration
SERVER_PORT=8080
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/pemilo?sslmode=disable

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# ENCRYPTION_KEY must be exactly 32 characters for AES-256
ENCRYPTION_KEY=your-32-character-encryption-key
# SALT values for password encryption (must match frontend)
ENCRYPTION_SALT_FRONT=frontSalt1234
ENCRYPTION_SALT_BACK=backSalt5678

# Owner Credentials (for creating admin accounts via /api/v1/owner/create-admin)
OWNER_USERNAME=owner
OWNER_PASSWORD=change-this-password-immediately

# CORS Configuration
# Use comma-separated list for multiple origins
# Example: http://localhost:3000,https://yourdomain.com
ALLOWED_ORIGINS=*
